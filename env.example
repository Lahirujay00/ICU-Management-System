# Root Environment Variables for ICU Management System

# Application
APP_NAME=ICU Management System
APP_VERSION=1.0.0
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/icu_management

# JWT
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Ports
BACKEND_PORT=5000
FRONTEND_PORT=3000

# CORS
CORS_ORIGIN=https://icu-management-system-front.vercel.app

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100 